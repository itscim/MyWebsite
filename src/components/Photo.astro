---
    const { src = null } = Astro.props; Astro
---
<div class="Photo" onclick="toggleLightbox(this)">
    <img src={src} alt=" " />
    <div class="lightbox">
        <img src={src} alt=" " />
    </div>

</div>

<style>
img{
    filter:drop-shadow(0 0.5rem 2rem hsl(0, 0%, 26%));
    cursor:zoom-in;
    width: 100%;
	aspect-ratio: 1;
	object-fit: contain;
}
.lightbox{
    position:fixed;
    display: none;
    inset:0;
    background:hsla(0deg, 0%, 0%, 0.75);
    z-index: 9;
}
.active .lightbox{
    display: block;
}

.lightbox img{
    aspect-ratio: unset;
    width: 100%;
    height:100%;
    cursor: zoom-out;
    position:fixed;
    inset:0;
    object-fit: contain;
    object-position: center center;
}
</style>
<script>
function toggleLightbox(el) {
    console.log(el)
    el.classList.toggle("active")
}
</script>