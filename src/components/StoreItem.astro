---
const { src = null, Society6 = null, Etsy = null } = Astro.props; Astro

let links = '';
if(Etsy) {
    links = `<a href=${Etsy}>Buy on Etsy</a>`;
}
if(Society6) {
    links = links + `<a href=${Society6}>Buy on Society6</a>`;
}
console.log(links);
---
<div class="Photo" onclick="toggleLightbox(this)">
<img src={src} alt=" "/>
{links}
<div class="lightbox">
<img src={src} alt=" "/>
</div>
</div>


<style>
.Photo {
    filter:drop-shadow(0 0.5rem 2rem hsl(207, 60%, 10%));
}
img{
    cursor:zoom-in;
    width: 100%;
	aspect-ratio: 5 / 4;
	object-fit: cover;
}
.lightbox{
    position:fixed;
    display: none;
    inset:0;
    background:hsla(0deg, 0%, 0%, 0.75);
    z-index: 9;
}
.active .lightbox{
    display: block;
}

.lightbox img{
    aspect-ratio: unset;
    width: 100%;
    height:100%;
    cursor: zoom-out;
    position:fixed;
    inset:0;
    object-fit: contain;
    object-position: center center;
}
.active a{
display: block;
position: fixed;
z-index: 10;
bottom:1rem;
right:1rem;
}
</style>
<script>
function toggleLightbox(el) {
    console.log(el)
    el.classList.toggle("active")
}
</script>